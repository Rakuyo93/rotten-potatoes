{% extends 'base.html.twig' %}

{% block title %}Admin - Modo - Liste des commentaires
{% endblock %}

{% block body %}

    <h1>Admin - Modo - Liste des commentaires</h1>

    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Auteur</th>
                <th scope="col">Note</th>
                <th scope="col">Commentaire</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for rating in ratings %}
                <tr class="table-active">
                    <td>{{ rating.id }}</td>
                    <td>{{ rating.author.name }}</td>
                    <td>{{ rating.notation | date('d/m/Y') }}</td>
                    <td>{{ rating.comment }}</td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('delete_rating', {'id': rating.id}) }}">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
