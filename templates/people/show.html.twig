{% extends 'base.html.twig' %}

{% block title %}
    {{ people.firstName }}
    {{ people.lastName }}
{% endblock %}

{% block body %}

    <div class="alert alert-secondary">

        <h1>{{ people.fullName }}</h1>

        <div class="row">
            <div class="col-2">
                <img src="{{ people.picture }}">
            </div>

            <div class="col-10">
                <h5>Né(e) le :
                    {{ people.birthday | date('d/m/Y') }}</h5>
                <p class="card-text">{{ people.description }}</p>
            </div>

            <hr>

            <div class="col-12 mt-2">
                <h4>
                    <i class="fas fa-film"></i>
                    Filmographie</h4>

                <ul>
                    <h5>Réalisations :</h5>
                    {% if not people.directed %}
                        <p>Aucune réalisations</p>
                    {% endif %}

                    {% for directed in people.directed %}
                        <li>{{ directed.releaseAt | date('Y') }}
                            :
                            {{ directed.title }}</li>
                    {% endfor %}
                </ul>

                <ul>
                    <h5>Acteur :</h5>
                    {% for actedIn in people.actedIn %}
                        <li>{{ actedIn.releaseAt | date('Y') }}
                            :
                            {{ actedIn.title }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}
